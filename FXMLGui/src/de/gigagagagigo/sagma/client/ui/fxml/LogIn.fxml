<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<GridPane id="loginMainPane" maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="140.0"
	prefWidth="280.0" hgap="10" vgap="5" xmlns="http://javafx.com/javafx/8.0.40"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.gigagagagigo.sagma.client.ui.fxml.controller.LogInController">

	<Label fx:id="serverLabel" text="Server:" GridPane.columnIndex="0"
		GridPane.rowIndex="0" />
	<TextField fx:id="tfServer" GridPane.columnIndex="1"
		GridPane.rowIndex="0" />

	<Label fx:id="usernameLabel" text="Username:"
		GridPane.columnIndex="0" GridPane.rowIndex="1" />
	<TextField fx:id="tfUsername" GridPane.columnIndex="1"
		GridPane.rowIndex="1" />
		
	<Label fx:id="passwordLabel" text="Passwort:" GridPane.columnIndex="0"
		GridPane.rowIndex="2" />
	<PasswordField fx:id="pfPassword" GridPane.columnIndex="1"
		GridPane.rowIndex="2" />

	<HBox GridPane.columnIndex="1" GridPane.rowIndex="3" spacing="20" alignment="bottom_right">
		<Button fx:id="okButton" onAction="#handleOK" text="OK"/>
		<Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel"/>
	</HBox>

</GridPane>


